<h1>Profiles#show</h1>
<p>Find me in app/views/profiles/show.html.erb</p>
<%= image_tag @profile.profile_picture %>

<hr>

<%= form_for @service, url: { controller: :services, action: :create, profile: @profile.id } do |f| %>
    <%= f.label :Category %>
    <%= f.select :category_id, @categories.map {|c| [c.name, c.id]} %>
    <br/>
    <%= f.label :Picture%>
    <%= f.file_field :picture %>
    <br/>
    <%= f.label :desc_service%>
    <%= f.text_area :desc_service%>
    <br/>
    <%= f.label :Price%>
    <%= f.text_field :price%>
    <%= f.submit "Upload"%>
<% end %>
<%= image_tag @service.picture%>
