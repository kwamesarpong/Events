<!--content-->
	<div class="product">
		<div class="container">
			<div class="spec ">
				<h3>Results</h3>
				<div class="ser-t">
					<b></b>
					<span><i></i></span>
					<b class="line"></b>
				</div>
			</div>
				<div class=" con-w3l agileinf">
				<% @items.each do |item| %>
				  <div class="col-md-4 pro-1">
						<div class="col-m">
						<% if item.class == Service %>
							<%= render(partial: 'service_search', locals: { item: item }) %>
						<% else %>
							<%= render(partial: 'profile_search', locals: { item: item }) %>
						<% end %>
				<% end %>				
				<div class="clearfix"></div>
			</div>
			<nav>
				<ul class="pagination pagination-lg" style="margin-left:44%;">
				<!-- <li><a href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li> -->
				<% 1.upto(@total_pages.to_i) do |n| %>
					<li class="pag-<%= n %>"><%= link_to n, { controller: :services, action: :index, page: n } %></li>
				<% end %>
				<!-- <li><a href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>-->
				</ul>
			</nav>
		</div>
	</div>

	<script>
		$(document).ready(function(e){
			page = <%= @page %>
			$('.pag-'+page).addClass('active');
		});
	</script>















